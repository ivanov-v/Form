include ../input/input

mixin form()
	+b.FORM.form&attributes(attributes)
		+e.HEADER.header
			+e.A.logo(href="http://csssr.ru/", target="_blank")
				+e.IMG.logo-image(src="./assets/images/logo.png", alt="Лого CSSSR")
			+e.H1.title Дело
			+e.IMG.stamp(src="./assets/images/stamp.png", alt="Секретно. Заполнено собственноручно")

		+b.fields
			+e.item
				+b.field
					+e.LABEL.label(for="name") Полное ФИО
					+e.INPUT.input.input(id="name", type="text", name="name", value="Иванов Вадим Николаевич")

			+e.item
				+b.field
					+e.LABEL.label(for="year") Год рождения
					+e.INPUT.input.input(id="year", type="text", name="year", value="1994")

			+e.item
				+b.field
					+e.LABEL.label(for="location") Место жительства
					+e.INPUT.input.input(id="location", type="text", name="location", value="г. Кстово, Россия")

			+e.item
				+b.field
					+e.LABEL.label(for="skype") Скайп
					+e.INPUT.input.input(id="skype", type="text", name="skype", value="dynamite_sfera")

			+e.item
				+b.field
					+e.LABEL.label(for="email") Почта
					+e.INPUT.input.input(id="email", type="email", name="skype", value="sferamail33@yandex.ru")
