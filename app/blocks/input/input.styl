.input
	padding-x(15px)
	display block
	overflow hidden
	width 100%
	height 55px
	font-family $font-family-secondary
	font-size 30px
	line-height 35px
	white-space nowrap
	text-overflow ellipsis
	color #231f20
	background-color transparent
	background-image url('../images/line.png')
	background-position 0 22px
	border none

	&::selection
		color #fff
		background $color-text-accent
